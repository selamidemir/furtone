<%- include("./partials/page_top.ejs") %>
<%- include("./partials/page_header.ejs") %>
      <!-- furnitures section start -->
      <div class="furnitures_section layout_padding h-100 pb-5">
         <div class="container">
            <div class="row">
               <div class="col-sm-12">
                  <h1 class="furnitures_taital">Our Furnitures Work</h1>
                  <p class="furnitures_text">reader will be distracted by the readable content of a page when looking at its layout. </p>
               </div>
            </div>
            <div class="furnitures_section_2">
               <div class="row">
                  <% furnitures.forEach(furniture => { %>
                     <div class="col-md-4">
                        <div class="hover01 column">
                           <figure><img class="furniture_image" src="/uploads/<%= furniture.photo %>"></figure>
                        </div>
                        <h3 class="introduction_text"><%= furniture.name %></h3>
                        <div class="seemore_bt"><a href="/furnitures/<%= furniture._id %>">See More</a></div>
                     </div>
                  <% }) %>
               </div>
            </div>
         </div>
      </div>
      <!-- furnitures section end -->
<%- include("./partials/page_footer.ejs") %>